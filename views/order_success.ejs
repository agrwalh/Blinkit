<%- include('./partials/header', { cartCount: cartCount, categories: categories, user: user }) %>
<div class="flex flex-col items-center justify-center min-h-[60vh]">
  <div class="bg-white p-8 rounded shadow max-w-md w-full text-center">
    <% if (payment && payment.status === 'completed') { %>
      <h2 class="text-2xl font-bold mb-6 text-green-700">Payment Successful!</h2>
      <p class="mb-2">Thank you for your purchase.</p>
      <p><strong>Order ID:</strong> <%= orderid %></p>
      <p><strong>Payment ID:</strong> <%= paymentid %></p>
    <% } else { %>
      <h2 class="text-2xl font-bold mb-6 text-red-700">Payment Failed!</h2>
      <p class="mb-2">There was a problem with your payment.</p>
      <a href="/cart" class="block text-center text-green-700 mt-4 hover:underline">Back to Cart</a>
    <% } %>
    <a href="/" class="block text-center text-green-700 mt-4 hover:underline">Back to Home</a>
  </div>
</div>
<%- include('./partials/footer') %> 